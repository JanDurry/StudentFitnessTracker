<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/periodic_statistic_layout"
    tools:context="android.mi.ur.studentfitnesstracker.Activities.PeriodicStatistics">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_current_week">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_week"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingTop="@dimen/new_paragraph_padding"
            android:paddingBottom="@dimen/param_padding"
            android:text="@string/current_week"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_week"
            android:layout_centerHorizontal="true"
            android:id="@+id/goal_title"
            android:textSize="@dimen/periodic_title_text_size"
            android:text
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingTop="@dimen/new_paragraph_padding"
            android:paddingBottom="@dimen/param_padding"
            android:text="@string/goal_title"/>

    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_current_week"
        android:id="@+id/total_mileage"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingTop="@dimen/new_paragraph_padding"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/total_mileage"/>

    <!-- Distanz Rad -->

    <RelativeLayout
        android:id="@+id/layout_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_mileage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingBottom="@dimen/param_padding"
            android:id="@+id/mileage_cycle"
            android:text="@string/mileage_cycle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mileage_cycle"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingBottom="@dimen/param_padding"
            android:id="@+id/mileage_cycle_value"
            android:text="@string/mileage_cycle_value"/>

    </RelativeLayout>

    <!-- Distanz zu FuÃŸ -->

    <RelativeLayout
        android:id="@+id/layout_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_cycle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mileage_run"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingBottom="@dimen/param_padding"
            android:id="@+id/mileage_run"
            android:text="@string/mileage_run"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mileage_run"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingBottom="@dimen/param_padding"
            android:id="@+id/mileage_run_value"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_kCal_burnt"
        android:layout_below="@id/layout_run"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingTop="@dimen/new_paragraph_padding"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/total_kCal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal_value"
        android:layout_below="@id/total_kCal_burnt"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/goal_value"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal_percentage"
        android:layout_below="@id/goal_value"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/goal_percentage"
        />

    <!-- Options -->

    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_menu" />



</RelativeLayout>
