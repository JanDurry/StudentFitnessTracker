<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/periodic_statistic_layout"
    tools:context="android.mi.ur.studentfitnesstracker.Activities.PeriodicStatistics">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/goal_title"
        android:textSize="@dimen/periodic_title_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingTop="@dimen/new_paragraph_padding"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/goal_title"/>

    <!-- Distanz Rad -->



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_title"
        android:layout_toStartOf="@id/mileage_cycle_value"
        android:id="@+id/mileage_cycle_img"
        android:paddingTop="@dimen/list_item_padding_top"
        android:paddingStart="@dimen/list_item_padding_small"
        android:paddingEnd="@dimen/list_item_padding"
        android:src="@drawable/img_cycle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goal_title"
            android:layout_toStartOf="@id/goal_title"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingBottom="@dimen/param_padding"
            android:id="@+id/mileage_cycle_value"
            android:text="@string/mileage_cycle_value"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mileage_cycle_value"
        android:layout_toStartOf="@id/mileage_cycle_value"
        android:id="@+id/mileage_cycle_avg_img"
        android:paddingTop="@dimen/list_item_padding_top"
        android:paddingStart="@dimen/list_item_padding_small"
        android:paddingEnd="@dimen/list_item_padding"
        android:src="@drawable/img_cycle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mileage_cycle_value"
        android:layout_toEndOf="@id/mileage_cycle_avg_img"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:id="@+id/mileage_cycle_avg_value"
        android:text="@string/mileage_cycle_value"/>



    <!-- Distanz zu FuÃŸ -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_title"
        android:layout_toEndOf="@id/mileage_cycle_value"
        android:id="@+id/mileage_run_img"
        android:paddingTop="@dimen/list_item_padding_top"
        android:paddingLeft="70dp"
        android:paddingEnd="@dimen/list_item_padding"
        android:src="@drawable/img_run"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goal_title"
            android:layout_toEndOf="@id/mileage_run_img"
            android:textSize="@dimen/periodic_text_size"
            android:paddingStart="@dimen/param_padding"
            android:paddingEnd="@dimen/space"
            android:paddingBottom="@dimen/param_padding"
            android:id="@+id/mileage_run_value"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mileage_run_img"
        android:layout_toStartOf="@id/mileage_run_value"
        android:id="@+id/mileage_run_avg_img"
        android:paddingTop="@dimen/list_item_padding_top"
        android:paddingStart="@dimen/list_item_padding_small"
        android:paddingEnd="@dimen/list_item_padding"
        android:src="@drawable/img_run"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mileage_run_value"
        android:layout_toEndOf="@id/mileage_run_avg_img"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:id="@+id/mileage_run_avg_value"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mileage_run_avg_img"
        android:id="@+id/total_kCal_burnt"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingTop="@dimen/new_paragraph_padding"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/total_kCal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal_value"
        android:layout_below="@id/total_kCal_burnt"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/average_kcal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal_percentage"
        android:layout_below="@id/goal_value"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/goal_percentage"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_percentage"
        android:id="@+id/total_mileage"
        android:textSize="@dimen/periodic_text_size"
        android:paddingStart="@dimen/param_padding"
        android:paddingEnd="@dimen/space"
        android:paddingBottom="@dimen/param_padding"
        android:text="@string/total_mileage"/>

    <!-- Options -->

    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_menu" />





</RelativeLayout>
