<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_taskitem"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="12dp">

    <TextView
        android:id="@+id/session_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="@string/session_item_type"/>
    <TextView
        android:id="@+id/session_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/session_item_type"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="@string/session_item_date"/>
    <TextView
        android:id="@+id/session_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/session_item_type"
        android:padding="3dp"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="@string/session_item_distance"/>
    <TextView
        android:id="@+id/session_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/session_item_distance"
        android:layout_toEndOf="@id/session_item_date"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="@string/session_item_time"/>
    <TextView
        android:id="@+id/session_item_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/session_item_distance"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="@string/session_item_pace"/>
    <TextView
        android:id="@+id/session_item_kCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/session_item_distance"
        android:layout_toEndOf="@id/session_item_time"
        android:gravity="center_vertical"
        android:padding="11sp"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="@string/session_header_kCal"/>

</RelativeLayout>